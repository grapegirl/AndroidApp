<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kiki.android">

    <!-- SMS 권한 추가 -->
    <uses-permission android:name="android.permission.SEND_SMS" /> <!-- 인터넷 권한 추가 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.kiki.act.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kiki.act.FileUploadActivity" />
        <activity android:name="com.kiki.act.HTTPUrlConnectionActivity" />
        <activity android:name="com.kiki.act.SocketTestMainActivity" />
        <activity android:name="com.kiki.act.WifiMainActivity" />
        <activity android:name="com.kiki.act.DrawerLayoutAct" />
    </application>

</manifest>